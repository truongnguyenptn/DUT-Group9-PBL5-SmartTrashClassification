{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "vitest/globals"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#/graphql/*": ["src/graphql/*"],
      "#/generated/*": ["src/generated/*"],
      "#/shared/*": ["src/shared/*"],
      "#/pages/*": ["src/pages/*"],
      "#/configs/*": ["src/configs/*"],
      "#/routers/*": ["src/routers/*"],
      "#/assets/*": ["src/assets/*"],
      "#/api/*": ["src/api/*"],
      "#/tests/mocks/*": ["src/tests/mocks/*"],
      "#/tests/helpers/*": ["src/tests/helpers/*"],
      "#/src/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts", "./vite.config.ts"]
}
